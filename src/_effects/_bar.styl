.ldgBar
  position relative
  width 100%
  height 4px
  background:rgba(0,0,0,.1);
  overflow hidden

.ldgBar::before
  position absolute
  display block
  content ""
  left -50px
  width 50px
  height 4px
  background $defaultColor
  animation ldgBar 2s linear infinite

@keyframes ldgBar
  0%
    left -50px; width 30%
  50%
    width 30%
  70%
    width 70%
  80%
    left 50%
  95%
    left 120%
  100%
    left 100%
